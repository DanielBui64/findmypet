<div id="petImagesCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <% @poster.pet.photos.each_with_index do |photo, index| %>
      <% if index == 0 %>
        <button type="button" data-bs-target="#petImagesCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <% else %>
        <button type="button" data-bs-target="#petImagesCarousel" data-bs-slide-to="<%= index %>" aria-label="Slide <%= index + 1 %> "></button>
      <% end %>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% @poster.pet.photos.each_with_index do |photo, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <% photo_url = cl_image_path(photo.key) %>
          <img src="<%= photo_url %>"  class="d-block w-100" style="max-height: 600px; object-fit: cover;" alt="A different angle of the same pet">
        </div>
      <% else %>
        <div class="carousel-item">
          <% photo_url = cl_image_path(photo.key) %>
          <img src="<%= photo_url %>"  class="d-block w-100" style="max-height: 600px; object-fit: cover;" alt="A different angle of the same pet">
        </div>
      <% end %>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#petImagesCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#petImagesCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div class="container" style="color:#004358">

  <h1 class="mt-3 text-center"><strong><%= @poster.pet.name %></strong></h1>

  <ul class="list-group d-flex flex-column mt-3" style="border-radius:15px">
    <li class="list-group-item" style="color:#004358"><p><strong>Last seen</strong> : <%= @poster.date_missing %></li>
    <li class="list-group-item" style="color:#004358"><p><strong>Species</strong> : <%= @poster.pet.species %></p></li>
    <li class="list-group-item" style="color:#004358"><p><strong>Breed</strong> : <%= @poster.pet.breed %></p></li>
    <li class="list-group-item" style="color:#004358"><p><strong>Color</strong> : <%= @poster.pet.color %></p></li>
  </ul>
  <ul class="list-group d-flex flex-column mt-3 border-0" style="border-radius:15px">
    <li class="list-group-item" style="color:#004358"><p><strong>Description</strong> : <%= @poster.comment %></p></li>
  </ul>
  <h2 class="mt-3">Location lost </h2>
  <li class="list-group-item" style="color:#004358; border-radius:15px 15px 0 0"><p><%= @poster.address %></p></li>

  <div style="width: 100%; height: 200px; border-radius:0 0 15px 15px"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <div class="row m-3">
    <div class="col-6 d-flex justify-content-start">
      <%= link_to "Home", root_path, class:"btn btn-lg", style:"background-color: #616161; color: white; border-radius: 10px;" %>
    </div>
  <% if current_user == @poster.pet.user %>
    <div class="col-6 d-flex justify-content-end">
        <%= link_to "Print", print_poster_path(@poster), class:"btn btn-lg", style:"background-color: #046E8F; color: white; border-radius: 10px;" %>
    </div>
  <% else %>
    <div class="col-6 d-flex justify-content-end">
        <%= link_to "Message Owner", print_poster_path(@poster), class:"btn btn-lg", style:"background-color: #046E8F; color: white; border-radius: 10px;" %>
    </div>
  <% end %>
  </div>
</div>
