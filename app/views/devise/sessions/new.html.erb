<div class="container" data-controller="poster-form">
  <h1 class="form-labels text-center mt-3" style="color: #046E8F">Login</h1>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="row form-actions">
          <div class="col-12 d-flex justify-content-center">
            <%= f.button :submit, "Log in", class:"btn btn-lg", style:"background-color: #046E8F; color: white; border-radius: 10px; width: 100%; max-width: 300px;"  %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-1"></div>
  </div>
</div>
