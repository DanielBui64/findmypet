<% if message.user == current_user %>
  <div class="d-flex justify-content-end" id="<%= message.user.id %>">
    <div class="m-1 p-2 blue-bubble">
<% else %>
  <div>
    <div class="m-1 p-2 gray-bubble">
<% end %>
      <small>
        <strong><%= message.user.first_name %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <% if message.photo.key %>
        <img src="<%= cl_image_path(message.photo.key) %>" class="img-fluid mx-auto d-block" style="object-fit: cover; width: 150px; height:150px; border-radius: 10px;" alt="message picture">
      <% end %>
      <p class="m-0"><%= message.content %></p>
    </div>
  </div>
