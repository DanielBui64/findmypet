<% if message.user == current_user %>
  <div class="d-flex justify-content-end" id="flex-div">
    <div class="m-1 p-2 gray-bubble" id="color-div">
<% else %>
  <div>
    <div class="m-1 p-2 blue-bubble">
<% end %>
      <small>
        <strong><%= message.user.first_name %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p class="m-0"><%= message.content %></p>
    </div>
  </div>
