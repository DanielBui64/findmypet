<div class="row">
  <div class="col-6">
    <% image_url = report.photos.empty? ? 'https://image.shutterstock.com/image-vector/white-kitten-260nw-143108236.jpg' : cl_image_path(report.photos[0].key) %>
    <img  src="<%= image_url %>"
          style="object-fit: cover; width: 90px; height:90px; border-radius: 10px;"
          alt="report picture">
  </div>
  <div class="col-6 d-flex align-items-center text-center">
    <h3><%= report.species %></h3>
  </div>
</div>
<%= link_to "", report_path(report.id), class:"stretched-link"%>
